<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= @doctor.first_name %> <%= @doctor.last_name %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/bootstrap/3.3.0/css/bootstrap.min.css">

<!-- Optional theme -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/bootstrap/3.3.0/css/bootstrap-theme.min.css">

  <!-- Custom CSS -->
  <link url='assets/landing-page.css' rel='stylesheet'>

  <!-- Custom Fonts -->
  <link url='assets/font-awesome.min.css' rel='stylesheet' type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">




</head>
<body>
<div id="map", style="height:500px"></div>
  <div class="content-section-b" style="padding-bottom:0px">
    <div class="container">
      <div class="col-xs-6"style="padding-left:0px" id="doctor" data-id="<%= @doctor.id %>"><h1>Dr. <%= @doctor.first_name %> <%= @doctor.last_name %></h1></div>
      <div class="col-xs-6"><h3></h3></div>
    </div>
  </div>

<div class="row">
  <div class="col-xs-6"style="padding-left:100px"><h3>Qualification:</h3><h4><%= @doctor.title %></h4><h3>Service:</h3><h4><%= @doctor.service %></h4><h3>Address:</h3><h4><%= @doctor.address %></h4></div>
  <div class="col-xs-6"style="padding-left:180px"><%= image_tag @doctor.picture_url, class: "img-thumbnail", size: "300x300" %></div>
</div>




<p id="notice"><%= notice %></p>


<!-- <%= link_to 'Edit', edit_doctor_path(@doctor) %> | -->
<!-- <%= link_to 'Back', doctors_path %> -->


<%= javascript_include_tag '//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry' %>
<%= javascript_include_tag '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' %>


</body>
</html>